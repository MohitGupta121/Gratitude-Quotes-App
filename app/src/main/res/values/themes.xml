<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuotesApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- COPY BUTTON ACTIVE STYLE -->
    <style name="CopyButtonActive" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">#EA436B</item>
        <item name="android:text">Copied</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">18dp</item>
    </style>

    <!-- COPY BUTTON INACTIVE STYLE -->
    <style name="CopyButtonInactive" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textColor">#EA436B</item>
        <item name="backgroundTint">#FFD9DD</item>
        <item name="android:text">Copy</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">18dp</item>
        <item name="strokeColor">#847374</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>